{
    "name": "pk-cnic-validator/pk-cnic-validator",
    "description": "A PHP package for validating Pakistan CNIC (Computerized National Identity Card) numbers with and without dashes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MrWasimAbbasi",
            "email": "imwasimabbasi@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "PkCnicValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PkCnicValidator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs": "phpcs src tests",
        "cs-fix": "phpcbf src tests",
        "stan": "phpstan analyse src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 